<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        layout="@layout/top_app_bar"
        android:id="@+id/topAppBar" />

        <!-- Search Bar -->
        <SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:iconifiedByDefault="false"
            android:queryHint="Search items..."
            tools:ignore="MissingConstraints"
            android:layout_below="@id/topAppBar"
            />

        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/topAppBar"
            android:layout_alignEnd="@id/searchView"
            android:src="@drawable/filter"
            />

        <!-- Add UI elements for filtering -->
        <SeekBar
            android:id="@+id/seekBarPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/searchView"
            android:layout_marginTop="16dp"
            android:max="100"
            android:visibility="gone" />

        <SeekBar
            android:id="@+id/seekBarPopularity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekBarPrice"
            android:layout_marginTop="16dp"
            android:max="100"
            android:visibility="gone" />


    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigationBar"
        android:layout_below="@id/searchView" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnWeather"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:paddingTop="10dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/circle"
                android:src="@drawable/weather"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Recently Added Items -->
            <TextView
                android:id="@+id/textViewRecentlyAdded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Recently Added Items"
                android:padding="16dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewRecentlyAdded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/items_recylerview"
                android:padding="8dp" />

            <!-- Items You May Like -->
            <TextView
                android:id="@+id/textViewYouMayLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Items You May Like"
                android:padding="16dp"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewYouMayLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/items_recylerview"
                android:padding="8dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <include
        layout="@layout/bottom_navigation_bar"
        android:id="@+id/bottomNavigationBar"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
